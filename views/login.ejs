<%- include("./partials/header") %> 

<div class="ui middle aligned center aligned grid" id="login">        
    <div class="column">
        <div style="margin-top: 50px;">
            <% if(error && error.length > 0){ %>
                <div class="ui negative message" style="margin-top: 2px; margin-left: 5px;margin-right: 5px;">
                    <div class="header">
                        <%= error %>
                    </div>
                 </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="ui success message" style="margin-top: 2px;margin-left: 5px;margin-right: 5px;">
                    <div class="header">
                      <%= success %>
                    </div>
                    
                  </div>
            <% } %>
        </div>

        <h2 class="ui image header">
            <div class="content">Login To Your Account</div>
        </h2>
        <form class="ui large form" action="/login" method="POST">
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="Username">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="Password">
                    </div>
                </div>
                
                <input class="ui fluid large blue submit button" type="submit" value="Login">
                <div class="ui error meassage"></div>
            </div>
        </form>
        <div class="ui message">
            New to us?
            <a href="/register">Sign Up</a>
        </div>

    </div>

</div>      

<%- include("./partials/footer") %>

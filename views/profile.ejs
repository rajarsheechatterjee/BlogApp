<%- include("partials/header") %>

<div class="container my-4">
    <h4 class="explore2 title"><%= currentUser.username %>'s Profile</h4>
    <div class="explore sml">
        <div class="commentdate">
            Joined <%= currentUser.joined.toDateString() %>
            <span>
                <form id="delete" action="/profile/<%= currentUser.id %>?_method=DELETE" method="POST">
                    <button class="replydeletebtn">
                        Delete Account
                    </button>
                </form>
            </span>
        </div>
    </div>

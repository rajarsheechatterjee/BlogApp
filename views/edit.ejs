<%- include("partials/header") %>

<div class="showcontainer my-4 bg-light border">
    <h2 class="title" style="margin-bottom: 15px;">Edit <%= post.title %></h2>
    <form action="/posts/<%= post.id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label class="strong">Title</label>
            <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="form-group">
            <label class="strong">Image</label>
            <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
        </div>
        <div class="form-group">
            <label class="strong">Blog Content</label>
            <textarea class="form-control" rows="9" name="post[body]"><%= post.body %></textarea>
        </div>
        <div class="right">
            <input class="editbtn" type="submit">
        </div>
    </form>
</div>

<%- include("partials/footer") %>
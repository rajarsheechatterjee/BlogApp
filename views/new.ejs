<%- include("partials/header") %>

<div class="showcontainer my-4 border">
    <h2 class="title" style="margin-bottom: 15px;">New Post</h2>
    <form action="/posts" method="POST">
        <div class="form-group">
            <label class="strong">Title</label>
            <input class="form-control" type="text" name="post[title]" placeholder="Title">
        </div>
        <div class="form-group">
            <label class="strong">Image</label>
            <input class="form-control" type="text" name="post[image]" placeholder="Image URL">
        </div>
        <div class="form-group">
            <label class="strong">Blog Content</label>
            <textarea class="form-control" rows="5" name="post[body]"></textarea>
        </div>
        <div class="right">
            <input class="newpost" type="submit">
        </div>
    </form>
</div>

<%- include("partials/footer") %>
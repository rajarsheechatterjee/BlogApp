<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/posts" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="posts[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="posts[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Tweet Content</label>
            <textarea name="posts[body]"></textarea>
        </div>
        <input class="ui violet big basic button" type="submit" >
        <div class="field">
            <input type ="hidden" name="posts[username]" value="<%= currentUser.username %>">
        </div>
    </form>
</div>

<%- include("partials/footer") %>

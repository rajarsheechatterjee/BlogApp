<%- include("partials/header") %>

<div class="showcontainer my-4">
    <h3 class="explore title">Explore</h3>
    <% result.forEach(function(post){ %>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><%= post.title %></h4>
            <p class="card-text"><%= post.body.substring(0, 150) %>...</p>
            <a href="/posts/<%= post.id %>"><button class="newpost">Read More</button></a>
        </div>
    </div>
    <% }) %>
</div>


<%- include("partials/footer") %>